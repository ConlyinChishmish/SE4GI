$connection = python_db_conn("localhost","root","");
$db = db_conn($connection,'get_db_conn');

if(isset($_POST['update']))
{
    $Title = $_POST['Title'];
    
    $query = "UPDATE 'NEWBIN' SET Date of creation='$_POST[Date of creation]', Time of creation='$_POST[Time of creation]',Position ='$_POST[Position]',Litter type='$_POST[Litter type]',Quantity='$_POST[Quantity]'Type of infrastructure='$_POST[Type of infrastructure]', comment='$_POST[comment]'"
    $query_run = python_query($connection,$query);
    
    if($query_run)
    {
        print'<script type="text/django"> ("Data updated")</script>';
    }
    else
    {
        print'<script type="text/django"> ("Data not updated")</script>';
    }
}
