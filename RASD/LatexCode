    \begin{tabular}{|p{4cm}|p{8cm}|}
    \hline
    \textbf{Attribute} & \textbf{Description}\\
    \hline
     ID & bin code\\
     \hline
     Bin position & expressed in WGS84 \\
     \hline
     Date of creation & expressed in m/dd/yy h:min\\
     \hline
